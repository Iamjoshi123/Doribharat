############################################################
# Core API server settings
############################################################

# HTTP port for the API service (override when running mediaServer.js separately)
PORT=8080

# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://doribharat_app:super-secure-password@127.0.0.1:5432/doribharat?sslmode=disable

# Auth & user management secrets (store in Secret Manager for production)
JWT_SIGNING_KEY_SECRET=projects/your-gcp-project/secrets/jwt-signing-key
ADMIN_USERS_SECRET=projects/your-gcp-project/secrets/admin-users

# Token configuration
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_HOURS=720
JWT_ALGORITHM=HS256

# Google Cloud project configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project
GCP_PROJECT=${GOOGLE_CLOUD_PROJECT}

############################################################
# Media signing server (server/mediaServer.js)
############################################################

# When running server/mediaServer.js, override PORT to avoid clashing with the API server
# PORT=4000

# Allowed origin for admin uploads (e.g., Vite dev server)
ADMIN_ORIGIN=http://localhost:5173

# Google Cloud Storage bucket configuration
GCS_BUCKET_NAME=doribharat-product-media
GCS_UPLOAD_PREFIX=uploads
GCS_SIGNING_TTL_SECONDS=600

# Service account used to sign upload URLs
GCS_SERVICE_ACCOUNT_EMAIL=media-signer@your-gcp-project.iam.gserviceaccount.com
# Preserve newlines when copying the key (replace literal \n with real newlines)
GCS_SERVICE_ACCOUNT_KEY=-----BEGIN PRIVATE KEY-----\\nABC...\\n-----END PRIVATE KEY-----\\n
