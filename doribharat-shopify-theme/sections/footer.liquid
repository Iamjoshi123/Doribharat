{%- comment -%}
  Section: Footer
  Matches the existing App.tsx footer design
{%- endcomment -%}

{%- style -%}
  .site-footer {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: 64px 0;
  }

  .site-footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 48px;
  }

  @media (max-width: 749px) {
    .site-footer__grid { grid-template-columns: 1fr; }
  }

  .site-footer__brand h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 16px;
  }

  .site-footer__brand p {
    max-width: 400px;
    color: var(--color-text-muted);
    font-weight: var(--font-weight-light);
    line-height: 1.7;
    font-size: 14px;
  }

  .site-footer__heading {
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    font-weight: var(--font-weight-bold);
    margin-bottom: 24px;
    color: var(--color-text);
  }

  .site-footer__links {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .site-footer__links a {
    color: var(--color-text-light);
    font-weight: var(--font-weight-light);
    font-size: 14px;
    transition: color var(--duration-normal);
  }

  .site-footer__links a:hover {
    color: var(--color-primary);
  }

  .site-footer__contact p {
    color: var(--color-text-light);
    font-weight: var(--font-weight-light);
    font-size: 14px;
    margin-bottom: 8px;
  }

  .site-footer__social {
    display: flex;
    gap: 16px;
    margin-top: 16px;
  }

  .site-footer__social a {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background: var(--color-surface-alt);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: all var(--duration-normal);
  }

  .site-footer__social a:hover {
    background: var(--color-primary);
    color: #fff;
  }

  .site-footer__bottom {
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid var(--color-border);
    text-align: center;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--color-text-muted);
  }
{%- endstyle -%}

<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="site-footer__grid">
      {%- comment -%} Brand Column {%- endcomment -%}
      <div class="site-footer__brand">
        <h2 class="serif">{{ shop.name }}</h2>
        <p>{{ section.settings.about_text | default: 'footer.about' | t }}</p>
      </div>

      {%- comment -%} Links Column {%- endcomment -%}
      <div>
        <h3 class="site-footer__heading">{{ section.settings.col2_heading | default: 'footer.collections' | t }}</h3>
        <div class="site-footer__links">
          {%- for link in section.settings.footer_menu.links -%}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {%- endfor -%}
        </div>
      </div>

      {%- comment -%} Contact Column {%- endcomment -%}
      <div>
        <h3 class="site-footer__heading">{{ 'footer.contact_us' | t }}</h3>
        {%- if settings.whatsapp_number != blank -%}
          <p>WhatsApp: {{ settings.whatsapp_number | remove: '91' | prepend: '+91 ' }}</p>
        {%- endif -%}
        {%- if section.settings.email != blank -%}
          <p>Email: <a href="mailto:{{ section.settings.email }}" style="color: var(--color-primary);">{{ section.settings.email }}</a></p>
        {%- endif -%}

        {%- comment -%} Social Links {%- endcomment -%}
        <div class="site-footer__social">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_pinterest != blank -%}
            <a href="{{ settings.social_pinterest }}" target="_blank" rel="noopener" aria-label="Pinterest">
              <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>

    <div class="site-footer__bottom">
      © {{ 'now' | date: '%Y' }} {{ shop.name }}. Crafted with Love in India.
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About text",
      "default": "We believe that bags are more than accessories — they are vessels of culture. Every Doribharat bag is handcrafted by artisans who have perfected the art of Dori work over generations."
    },
    {
      "type": "text",
      "id": "col2_heading",
      "label": "Second column heading",
      "default": "Collections"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer navigation",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact email",
      "default": "hello@doribharat.com"
    }
  ]
}
{% endschema %}
