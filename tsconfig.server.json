    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./server",
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": ["server/**/*.ts"]
}
