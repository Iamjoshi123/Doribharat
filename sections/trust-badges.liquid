  "name": "Trust Badges",
  "class": "section-trust-badges",
  "settings": [],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "limit": 6,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "handcrafted", "label": "Handcrafted" },
            { "value": "shipping", "label": "Shipping" },
