        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "category": "Trust",
      "blocks": [
        { "type": "badge", "settings": { "icon": "handcrafted", "title": "Handcrafted", "description": "Every piece is made by skilled artisans" } },
        { "type": "badge", "settings": { "icon": "shipping", "title": "Free Shipping", "description": "Complimentary delivery across India" } },
        { "type": "badge", "settings": { "icon": "secure", "title": "Secure Payment", "description": "100% safe and encrypted checkout" } },
        { "type": "badge", "settings": { "icon": "returns", "title": "Easy Returns", "description": "Hassle-free 7-day return policy" } }
      ]
    }
  ]
}
{% endschema %}
