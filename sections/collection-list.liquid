{%- comment -%}
  Section: Collection List
  Matches the "Curated Silhouettes" category grid from Home.tsx
{%- endcomment -%}

{%- style -%}
  .collection-list {
    text-align: center;
  }

  .collection-list__header {
    margin-bottom: 48px;
  }

  .collection-list__header h2 {
    margin-bottom: 16px;
  }

  .collection-list__header p {
    color: var(--color-text-muted);
    font-weight: var(--font-weight-light);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .collection-list__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: var(--grid-gap);
  }

  @media (max-width: 989px) {
    .collection-list__grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 749px) {
    .collection-list__grid { grid-template-columns: 1fr; }
  }

  .collection-list__item {
    text-align: center;
    text-decoration: none;
    display: block;
  }

  .collection-list__image {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: var(--radius-2xl);
    background: var(--color-surface-alt);
    margin-bottom: 24px;
  }

  .collection-list__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.2);
    transition: filter var(--duration-slower), transform var(--duration-slower);
  }

  .collection-list__item:hover .collection-list__image img {
    filter: grayscale(0);
    transform: scale(1.03);
  }

  .collection-list__image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(28,25,23,0);
    transition: background var(--duration-normal);
  }

  .collection-list__item:hover .collection-list__image::after {
    background: rgba(28,25,23,0.05);
  }

  .collection-list__name {
    font-size: 1.25rem;
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    transition: color var(--duration-normal);
  }

  .collection-list__item:hover .collection-list__name {
    color: var(--color-primary);
  }

  .collection-list__cta {
    display: block;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--color-text-muted);
    margin-top: 8px;
  }
{%- endstyle -%}

<section class="section-spacing collection-list" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="collection-list__header">
      <h2 class="serif">{{ section.settings.heading | default: 'sections.collection_list.heading' | t }}</h2>
      {%- if section.settings.subheading != blank -%}
        <p>{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="collection-list__grid">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        {%- if collection != blank -%}
          <a href="{{ collection.url }}" class="collection-list__item hover-lift" {{ block.shopify_attributes }}>
            <div class="collection-list__image">
              {%- if collection.featured_image != blank -%}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.title }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {%- elsif block.settings.custom_image != blank -%}
                <img
                  src="{{ block.settings.custom_image | image_url: width: 600 }}"
                  alt="{{ collection.title }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {%- else -%}
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <h3 class="collection-list__name">{{ collection.title }}</h3>
            <span class="collection-list__cta">{{ 'collections.discover_more' | t }}</span>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection List",
  "class": "section-collection-list",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Curated Silhouettes"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "From daily commutes to evening galas, find the perfect bag rooted in tradition."
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns on desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "limit": 8,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image (optional)",
          "info": "Overrides collection featured image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
      "category": "Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
