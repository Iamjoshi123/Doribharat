{%- comment -%}
  Section: Hero Banner
  Full-viewport hero matching the current Home.tsx design
  With animated text entrance and gradient overlay
{%- endcomment -%}

{%- style -%}
  .hero-banner {
    position: relative;
    height: {{ section.settings.height }}vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background-color: #F7F4F0;
  }

  .hero-banner__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-banner__media img,
  .hero-banner__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.9;
    transition: opacity 1s ease;
  }

  .hero-banner__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(255,255,255,0.65) 0%,
      rgba(255,255,255,0.2) 40%,
      transparent 70%
    );
  }

  .hero-banner__content {
    position: relative;
    z-index: 10;
    max-width: 560px;
    animation: slideInLeft var(--duration-slowest) var(--ease-smooth);
  }

  .hero-banner__tagline {
    text-transform: uppercase;
    letter-spacing: 0.4em;
    font-size: 11px;
    font-weight: var(--font-weight-semibold);
    margin-bottom: 24px;
    color: var(--color-primary);
  }

  .hero-banner__heading {
    font-size: clamp(3rem, 7vw, 6rem);
    line-height: 1.1;
    margin-bottom: 32px;
    color: #44403c;
  }

  .hero-banner__text {
    font-size: 1.125rem;
    color: #57534e;
    font-weight: var(--font-weight-light);
    margin-bottom: 40px;
    line-height: 1.7;
  }

  .hero-banner__actions {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
  }

  @media (max-width: 749px) {
    .hero-banner {
      height: 75vh;
    }

    .hero-banner__overlay {
      background: linear-gradient(
        to bottom,
        rgba(255,255,255,0.3) 0%,
        rgba(255,255,255,0.7) 60%,
        rgba(255,255,255,0.9) 100%
      );
    }

    .hero-banner__content {
      text-align: center;
      max-width: 100%;
    }

    .hero-banner__heading {
      font-size: 2.5rem;
    }

    .hero-banner__actions {
      justify-content: center;
    }
  }
{%- endstyle -%}

<section class="hero-banner" data-section-id="{{ section.id }}">
  {%- comment -%} Background Media {%- endcomment -%}
  <div class="hero-banner__media">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
    {%- elsif section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 2000 }}"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        loading="eager"
        fetchpriority="high"
        width="2000"
        height="{{ 2000 | divided_by: section.settings.image.aspect_ratio | round }}"
      >
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    <div class="hero-banner__overlay"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="page-width" style="width: 100%;">
    <div class="hero-banner__content">
      {%- if section.settings.tagline != blank -%}
        <span class="hero-banner__tagline">{{ section.settings.tagline }}</span>
      {%- endif -%}

      <h1 class="hero-banner__heading serif">
        {{ section.settings.heading | default: 'sections.hero.default_title' | t }}
      </h1>

      {%- if section.settings.subheading != blank -%}
        <p class="hero-banner__text">{{ section.settings.subheading }}</p>
      {%- endif -%}

      <div class="hero-banner__actions">
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="btn btn--primary">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}

        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 }}" class="btn btn--outline">
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video (optional)",
      "info": "Overrides the image if provided"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section height",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 90,
      "unit": "vh"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "The Embroidered Edit"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Carry your Heritage"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover a collection of hand-stitched Batwas, Totes, and Backpacks that blend modern utility with timeless Indian threads."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second button label (optional)"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
